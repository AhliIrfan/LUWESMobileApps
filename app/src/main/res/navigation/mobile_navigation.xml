<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.luwesmobileapps.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_spp"
            app:destination="@id/nav_devicepage"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_nav_home_to_nav_ble"
            app:destination="@id/nav_ble"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/nav_devicepage"
        android:name="com.example.luwesmobileapps.ui.devicepage.DevicePageFragment"
        android:label="@string/menu_devicepage"
        tools:layout="@layout/fragment_devicepage" />

    <fragment
        android:id="@+id/nav_ble"
        android:name="com.example.luwesmobileapps.ui.graphviewer.GraphViewerFragment"
        android:label="@string/menu_graphviewer"
        tools:layout="@layout/fragment_graphviewer" >
        <action
            android:id="@+id/action_nav_ble_to_nav_spp"
            app:destination="@id/nav_devicepage"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
</navigation>