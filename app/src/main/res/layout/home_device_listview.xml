<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <com.google.android.material.card.MaterialCardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/inner_margin"
        app:strokeWidth="@dimen/stroke_width"
        app:strokeColor="@color/colorPrimary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/inner_margin">


            <TextView
                android:id="@+id/deviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/dialog_margin"
                android:text="12345678901234567890"
                android:textSize="@dimen/text_content2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deviceAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/deviceName"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dialog_margin"
                android:layout_toEndOf="@id/deviceName"
                android:text="5C:46:B0:0C:5C:67"
                android:textAlignment="textEnd"
                android:textSize="@dimen/text_content2" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/deviceName"
                android:layout_marginBottom="@dimen/dialog_margin"/>

            <RelativeLayout
                android:id="@+id/dataContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/deviceName"
                android:layout_marginTop="@dimen/inner_margin">

                <ImageView
                    android:id="@+id/IconContainer"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_promithevo_p"
                    app:tint="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/IconContainer"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="100sp"
                            android:layout_height="wrap_content"
                            android:text="Water Level"
                            android:textSize="@dimen/text_content2" />

                        <TextView
                            android:id="@+id/lastWaterLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Not Measured Yet"
                            android:textSize="@dimen/text_content2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="100sp"
                            android:layout_height="wrap_content"
                            android:text="Battery Level"
                            android:textSize="@dimen/text_content2" />

                        <TextView
                            android:id="@+id/lastBattery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not Measured Yet"
                            android:textSize="@dimen/text_content2" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dataContainer"
                android:layout_marginTop="@dimen/dialog_margin"
                android:layout_toStartOf="@id/lastConnection"
                android:text="Last Connection"
                android:textSize="@dimen/text_content2" />

            <TextView
                android:id="@+id/lastConnection"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/dataContainer"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dialog_margin"
                android:text="31/07/2022"
                android:textAlignment="textEnd"
                android:textSize="@dimen/text_content2" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>