<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/border_margin"
        android:paddingTop="@dimen/border_margin"
        android:paddingRight="@dimen/border_margin"
        tools:context="com.example.luwesmobileapps.ui.sppdevice.SPPDeviceFragment">
        <TextView
            android:id="@+id/DeviceInfoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device Info"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/DeviceInfoGroup"
            android:orientation="vertical"
            android:layout_below="@+id/DeviceInfoTitle">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/DeviceNameTitle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Device Name"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/DeviceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:enabled="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/DeviceModelTitle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Device Model"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/DeviceModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:enabled="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/FirmwareVersionTitle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Firmware Version"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/FirmwareVersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:enabled="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/MACAddressTitle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="MAC Address"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/MACAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:enabled="false"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/RecordHistoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Record History"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/DeviceInfoGroup"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RecordHistoryGroup"
            android:orientation="vertical"
            android:layout_below="@+id/RecordHistoryTitle">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/FirstRecordDateTitle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="First Recorded Date"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/FirstRecordDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:enabled="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/LastRecordedDateTitle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Last Recorded Date"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/LastRecordedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:enabled="false"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/SettingParameterTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setting Parameter"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/RecordHistoryGroup"/>
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/SettingParameterTitle"
            android:layout_marginTop="5dp"
            android:entries="@array/setting_option_arrays" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/SettingParameterGroup"
            android:orientation="vertical"
            android:layout_below="@+id/spinner2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/SiteNameTitle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Site Name"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/SiteName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:enabled="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/IPAddressTitle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="IP Address"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/IPAddress"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:enabled="true"/>
                <TextView
                    android:id="@+id/PortTitle"
                    android:layout_width="30dp"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content"
                    android:text="Port"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/Port"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:enabled="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ZeroValueTitle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Sensor Zero Value"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/ZeroValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:enabled="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/SensorOffsetTitle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Sensor Offset"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/SensorOffset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:enabled="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/IntervalTitle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Record Interval"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/Interval"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:enabled="true"/>
                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight=".35"
                    android:entries="@array/interval_option_arrays"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/settingButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/SettingParameterGroup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Send Setting"/>
        <TextView
            android:id="@+id/DataLogDownloadTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Log Download"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/settingButton"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/DataLogDownloadGroup"
            android:orientation="vertical"
            android:layout_below="@+id/DataLogDownloadTitle">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/StartDateTitle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Start Date"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/StartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:enabled="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/EndDateTitle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Last Recorded Date"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/EndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:enabled="true"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/downloadButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/DataLogDownloadGroup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Download"/>
    </RelativeLayout>
</ScrollView>
