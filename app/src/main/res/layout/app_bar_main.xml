<!--    </com.google.android.material.appbar.AppBarLayout>-->


    <include layout="@layout/content_main"
        />

    <RelativeLayout
        android:id="@+id/connectmenu"
        android:layout_gravity="top"
        android:layout_margin="@dimen/border_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/fab"
        app:layout_anchorGravity="top"
        android:visibility="gone">
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/action_blescan"
            android:text="BLE Scan"
            android:elevation="2dp"
            android:checkable="false"
            android:clickable="false"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_blescan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="end"
            app:backgroundTint="@color/colorPrimary"
            app:tint="@color/cardview_light_background"
            app:elevation="2dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_bluetoothle" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/action_blescan"
            android:layout_marginVertical="@dimen/inner_margin"
            android:layout_toRightOf="@id/action_bluetoothscan"
            android:checkable="false"
            android:clickable="false"
            android:elevation="2dp"
            android:text="BT Scan" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_bluetoothscan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/action_blescan"
            android:layout_marginVertical="@dimen/inner_margin"
            android:layout_alignParentLeft="true"
            android:layout_gravity="end"
            app:backgroundTint="@color/colorPrimary"
            app:tint="@color/cardview_light_background"
            app:elevation="2dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_bluetooth" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/action_disconnect"
            android:layout_below="@id/action_bluetoothscan"
            android:checkable="false"
            android:clickable="false"
            android:elevation="2dp"
            android:text="Disconnect" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/action_bluetoothscan"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/inner_margin"
            app:backgroundTint="@color/colorPrimary"
            app:tint="@color/cardview_light_background"
            app:elevation="2dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_disconnect" />
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_gravity="start|bottom"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="2dp"
        app:srcCompat="@drawable/ic_search"
        app:tint="@color/cardview_light_background"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>